<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.wangbaiyuan.contacts"
    android:versionCode="1"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.wangbaiyuan.bycontacts.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.wangbaiyuan.bycontacts.Tab_contacts"
            android:label="@string/title_liebiao" >
        </activity>
        <activity
            android:name="cn.wangbaiyuan.bycontacts.Page_about"
            android:label="@string/title_about" >
        </activity>
        <activity
            android:name="cn.wangbaiyuan.bycontacts.Tab_dailer"
            android:label="@string/title_bohao" >
        </activity>
        <activity
            android:name="cn.wangbaiyuan.bycontacts.Tab_message"
            android:label="@string/title_bohao" >
        </activity>
        <activity
            android:name="cn.wangbaiyuan.bycontacts.Detail_contacts"
            android:label="@string/title_bohao" >
        </activity>
        <activity
            android:name=".AddPaper"
            android:label="@string/title_activity_add_paper" >
        </activity>
    </application>
    <!-- 拨打电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 在SD卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 授权访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读取联系人权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
